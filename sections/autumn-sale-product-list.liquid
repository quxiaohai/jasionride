<section class="autumn-sale-product-list w-full">
    {%- if ss.show_heading -%}
        <div class="title tw-text-center tw-font-bold">{{ ss.heading }}</div>
    {%- endif -%}
    <div class="autumn-content w-full flex-center">
        <motion-list class="card-grid card-grid--3 desktop-done grid relative">
            {%- for block in section.blocks -%}
                {%- assign bs = block.settings -%}
                {%- assign variant = bs.product.selected_or_first_available_variant -%}
                <div class="_product-card flex-col tw-overflow-hidden">
                    <div class="product-cover tw-relative">
                        {%- if variant.compare_at_price > variant.price -%}
                            {%- assign diff = variant.compare_at_price | minus: variant.price -%}
                            <div class="tag-list flex-left">
                                <div class="tag tw-font-bold">Save {{ diff | money_without_trailing_zeros }}</div>
                            </div>
                        {%- endif -%}
                        {% render 'global-image', desktop_img: variant.featured_image, desktop_size: 650 %}
                    </div>
                    <div class="product-info">
                        <div class="product-name tw-font-bold">{{ bs.product.title }}</div>
                        {%- if product.metafields.reviews.rating.value != blank and product.metafields.reviews.rating_count.value > 0 -%}
                            {% liquid
                                assign rating_decimal = 0
                                assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
                                if decimal >= 0.3 and decimal <= 0.7
                                    assign rating_decimal = 0.5
                                elsif decimal > 0.7
                                    assign rating_decimal = 1
                                endif
                            %}
                            <div class="product__rating flex items-center gap-2">
                                <div class="rating text-lg leading-none"
                                     role="img"
                                     aria-label="{{ 'general.accessibility.star_reviews_info' | t: rating_value: bs.product.metafields.reviews.rating.value, rating_max: bs.product.metafields.reviews.rating.value.scale_max }}">
                                    {%- render 'icon', icon: 'star', size: 'xs lg:hidden' -%}
                                    <span aria-hidden="true"
                                          class="rating-star hidden lg:bloc"
                                          style="--rating: {{ bs.product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ bs.product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
                                    ></span>
                                </div>
                                <p class="rating-text text-sm leading-none">
                                    <span aria-hidden="true">{{ bs.product.metafields.reviews.rating.value }}</span>
                                </p>
                                <p class="rating-count text-sm leading-none hidden xl:block">
                                    <span aria-hidden="true">{{ 'general.accessibility.star_reviews_count' | t: count: bs.product.metafields.reviews.rating_count.value }}</span>
                                    <span class="sr-only">
                                        {{- bs.product.metafields.reviews.rating_count.value }}
                                        {{ 'general.accessibility.total_reviews' | t -}}
                                    </span>
                                </p>
                            </div>
                        {%- endif -%}
                        {%- assign specs = product.metafields.custom.specifications.value | default: false -%}
                        {%- if specs -%}
                            <ul class="text-items w-full flex-left">
                                {% for i in ( 0..specs.title_list.value.size) limit: 4 %}
                                    {% if specs.title_list.value[i] != blank %}
                                        <li class="text-item tw-relative">
                                            <div class="num tw-font-semibold">{{ specs.title_list.value[i] }}</div>
                                            <div class="text tw-font-semibold">{{ specs.content_list.value[i] }}</div>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        {%- endif -%}
                        <div class="price-box flex-left">
                            <div class="price tw-font-bold">{{ variant.price | money }}</div>
                            <div class="original-price">{{ variant.compare_at_price | money }}</div>
                        </div>
                        <div class="pay-discount flex-left">
                            {{ bs.payment_text }}
                            {%- for v in (1..3) -%}
                                {%- assign payment_icon = 'payment_icon' | append: v -%}
                                {%- if bs[payment_icon] != blank -%}
                                    {% render 'global-image', desktop_img: bs[payment_icon], desktop_size: 200, media_type: 'icon' %}
                                {%- endif -%}
                            {%- endfor -%}
                        </div>
                        <div class="btn-group flex-between">
                            <button onclick="$heybike.emit('{{ section.id }}-shop-popup', {{ forloop.index0 }})"
                                    class="button flex-center">{{ bs.button1 }}</button>
                            <a href="{{ bs.button2_url }}" target="_blank"
                               class="button more flex-center">{{ bs.button2 }}</a>
                        </div>
                    </div>
                </div>
            {%- endfor -%}
