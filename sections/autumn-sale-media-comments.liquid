{%- assign ss = section.settings -%}
<style>
    .autumn-sale-media-comments {
        padding: 58px 0 40px;
        background-color: #f9f7f6;
    }
    .autumn-sale-media-comments .title {
        font-size: 36px;
        color: #000000;
        padding-bottom: 45px;
    }
    .autumn-sale-media-comments .autumn-content {
        max-width: 1376px;
        box-sizing: border-box;
        padding: 0 48px;
        margin: 0 auto;
    }
    .autumn-sale-media-comments .autumn-content .slider {
        padding-inline: 0;
        margin-inline: 0;
        scroll-padding-inline: 0;
        padding-block-end: 0;
    }
    .autumn-sale-media-comments .autumn-content .card-grid {
