        content: "’’";
        left: auto;
        top: auto;
        right: -20px;
        bottom: -54px;
    }
    .autumn-sale-media-comments .autumn-content .media-info .name {
        padding-top: 45px;
        font-size: 16px;
    }
    .autumn-sale-media-comments .slideshow-control {
        padding-top: 27px;
    }
    .autumn-sale-media-comments .slideshow-control .flickity-page-dots {
        margin-block: 0;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots {
        gap: 0 30px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .button {
        --buttons-width: 46px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .button .btn-text .icon {
        width: 32px;
        height: 32px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .indicators {
        gap: 0 11px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot {
        width: 40px;
        margin: 0 5px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot:before {
        height: 4px;
        width: 40px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot[aria-current=true] {
        width: 80px;
    }
    .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot[aria-current=true]:before {
        width: 80px;
    }
    @media screen and (max-width: 1376px) {
        .autumn-sale-media-comments {
            padding: 49.3px 0 34px;
        }
        .autumn-sale-media-comments .title {
            font-size: 30.6px;
            padding-bottom: 38.25px;
        }
        .autumn-sale-media-comments .autumn-content {
            padding: 0 36px;
        }
        .autumn-sale-media-comments .autumn-content .card-grid {
            --slider-item-width: calc((100% - 40px) / 3);
        }
        .autumn-sale-media-comments .autumn-content .slider-item {
            border-radius: 8.5px;
            height: 40.988372093vw;
        }
        .autumn-sale-media-comments .autumn-content .media-info {
            height: 248.2px;
            padding: 0 32.3px 17px;
        }
        .autumn-sale-media-comments .autumn-content .media-info .intro:before, .autumn-sale-media-comments .autumn-content .media-info .intro:after {
            font-size: 42.5px;
            left: -12.75px;
            top: -8.5px;
        }
        .autumn-sale-media-comments .autumn-content .media-info .intro:after {
            left: auto;
            top: auto;
            right: -17px;
            bottom: -45.9px;
        }
        .autumn-sale-media-comments .slideshow-control {
            padding-top: 22.95px;
        }
    }
