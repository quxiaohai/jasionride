            padding: 0.8680555556rem 0 1.5190972222rem;
        }
        .autumn-sale-media-comments .autumn-content {
            max-width: 100%;
            padding: 0;
        }
        .autumn-sale-media-comments .autumn-content .card-grid {
            --slider-item-width: 57.87vw;
            gap: 0 0.5859375rem;
            padding-left: 0.9114583333rem;
            padding-right: 50vw;
        }
        .autumn-sale-media-comments .autumn-content .slider {
            scroll-padding-inline: var(--page-padding);
            padding-block-end: var(--card-shadow-vertical-offset);
        }
        .autumn-sale-media-comments .autumn-content .slider-item {
            border-radius: 0.1736111111rem;
            height: 86.2962962963vw;
        }
        .autumn-sale-media-comments .autumn-content .media-info {
            height: 12.2612847222rem;
            padding: 0 1.6927083333rem 1.0850694444rem;
        }
        .autumn-sale-media-comments .autumn-content .media-info .score-items .score-item {
            width: 0.5642361111rem;
            height: 0.5642361111rem;
            margin-right: 2px;
        }
        .autumn-sale-media-comments .autumn-content .media-info .intro {
            padding-top: 0.6944444444rem;
            font-size: 0.7595486111rem;
            font-weight: 300;
            line-height: 1.8;
        }
        .autumn-sale-media-comments .autumn-content .media-info .intro:before, .autumn-sale-media-comments .autumn-content .media-info .intro:after {
            font-size: 1.6276041667rem;
            left: -0.8680555556rem;
            top: -0.2170138889rem;
        }
        .autumn-sale-media-comments .autumn-content .media-info .intro:after {
            left: auto;
            top: auto;
            right: -0.8680555556rem;
            bottom: -1.171875rem;
        }
        .autumn-sale-media-comments .autumn-content .media-info .name {
            padding-top: 1.171875rem;
            font-size: 0.5208333333rem;
        }
        .autumn-sale-media-comments .slideshow-control {
            padding-top: 1.2803819444rem;
            justify-content: center;
        }
        .autumn-sale-media-comments .slideshow-control .tw-mobile--dots {
            gap: 0;
        }
        .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .indicators {
            display: none;
        }
        .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot {
            width: 1.3020833333rem;
            margin: 0 0.6510416667rem;
            height: 0.3255208333rem;
        }
        .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot:before {
            height: 0.3255208333rem;
            width: 1.3020833333rem;
        }
        .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot[aria-current=true] {
            width: 2.6041666667rem;
        }
        .autumn-sale-media-comments .slideshow-control .tw-mobile--dots .flickity-page-dot[aria-current=true]:before {
            width: 2.6041666667rem;
        }
    }
</style>
<div class="autumn-sale-media-comments w-full">
    <div class="autumn-content w-full">
        <slider-element
                id="Slider-{{ section.id }}"
                class="grid slider slider--desktop slider--tablet"
                selector=".card-grid>.slider-item">
            <motion-list class="card-grid card-grid--3 mobile:card-grid--1 grid">
                {%- for block in section.blocks -%}
                    {%- assign bs = block.settings -%}
                    <div class="slider-item card tw-relative tw-overflow-hidden">
                        {% render 'global-image', desktop_img: bs.desktop_image, desktop_size: 450, mobile_img: bs.mobile_image, mobile_size: 500 %}
                        <div class="media-info flex-center-col tw-absolute">
                            {% render 'icon-score', info: bs %}
                            <div class="intro tw-relative tw-text-center tw-leading-normal">
                                {{ bs.intro }}
                            </div>
                            <div class="name tw-leading-[1.2] tw-font-bold">{{ bs.title }}</div>
                        </div>
                    </div>
                {%- endfor -%}
            </motion-list>
        </slider-element>
        <div class="slideshow-control w-full flex-right">
            <div class="tw-mobile--dots flex-center">
                <slider-dots class="flickity-page-dots w-auto pointer-events-auto"
                             aria-controls="Slider-{{ section.id }}">
                    {%- for i in (1..section.blocks.size) -%}
                        <button type="button" class="flickity-page-dot" data-index="{{ i }}"
                                aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                            <span class="sr-only">{{ 'general.pagination.page' | t: number: forloop.index }}</span>
                        </button>
                    {%- endfor -%}
                </slider-dots>
                <div class="tw-slider-pointers flex-center indicators">
                    <button class="button button--secondary" type="button" is="previous-button"
                            aria-controls="Slider-{{ section.id }}"
                            aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled tabindex="-1">
                        <span class="btn-fill" data-fill></span>
                        <span class="btn-text">
                            {%- render 'icon', icon: 'chevron-left', class: 'stroke-2 transform' -%}
                        </span>
                    </button>
                    <button class="button button--secondary" type="button" is="next-button"
                            aria-controls="Slider-{{ section.id }}"
                            aria-label="{{ 'general.pagination.next' | t | escape }}" tabindex="-1">
                        <span class="btn-fill" data-fill></span>
                        <span class="btn-text">
                            {%- render 'icon', icon: 'chevron-right', class: 'stroke-2 transform' -%}
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Autumn Sale Comments",
  "class": "shopify-bike-main",
  "tag": "section",
  "presets": [
    {
      "name": "autumn-sale-comments"
    }
  ],
  "settings": [
    {
      "type": "color",
      "id": "page_color",
      "label": "Background Color",
      "default": "#f9f7f6"
    },
    {
      "type": "number",
      "id": "page_top",
      "label": "Padding Top"
    },
    {
      "type": "number",
      "id": "page_bottom",
      "label": "padding Bottom"
    }
  ],
  "blocks": [
    {
      "type": "media",
      "name": "Media Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Backdrop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Backdrop Image"
        },
        {
          "type": "range",
          "id": "score",
          "label": "Score",
          "min": 1,
          "max": 5,
          "step": 1,
          "unit": "s",
          "default": 5
        },
        {
          "type": "richtext",
          "id": "intro",
          "label": "Intro",
          "default": "<p></p>"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Daniele Capuccini"
        }
      ]
    }
  ]
}
{% endschema %}
