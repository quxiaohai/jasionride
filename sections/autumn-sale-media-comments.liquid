    }
    .autumn-sale-media-comments .autumn-content .slider-item {
        border-radius: 10px;
        height: 564px;
    }
    .autumn-sale-media-comments .autumn-content .slider-item .image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .autumn-sale-media-comments .autumn-content .media-info {
        bottom: 0;
        left: 0;
        width: 100%;
        height: 292px;
        box-sizing: border-box;
        padding: 0 38px 20px;
        justify-content: flex-end;
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4));
    }
    .autumn-sale-media-comments .autumn-content .media-info .score-items .score-item {
        width: 17px;
        height: 17px;
        margin-right: 2px;
    }
    .autumn-sale-media-comments .autumn-content .media-info .score-items svg {
        width: 100%;
        height: 100%;
    }
    .autumn-sale-media-comments .autumn-content .media-info .intro, .autumn-sale-media-comments .autumn-content .media-info .name {
        color: #ffffff;
    }
    .autumn-sale-media-comments .autumn-content .media-info .intro {
        padding-top: 22px;
        font-size: 14px;
    }
    .autumn-sale-media-comments .autumn-content .media-info .intro:before, .autumn-sale-media-comments .autumn-content .media-info .intro:after {
        content: "‘‘";
