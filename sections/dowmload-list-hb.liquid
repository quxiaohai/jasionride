            </svg>
            {{bk_stts.type}}
          </span>
        </a>
      </div>
      {% endfor %}
    </div>

    <div class="tw-text-center tw-mt-12" id="show-more-container">
      <div class="button button--primary tw-px-5 tw-py-2 md:tw-text-sm  button--blur tw-text-xs" is="hover-link" id="show-more-button">
        <span class="btn-text">{{ 'general.pagination.show_more' | t }} </span>
      </div>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const itemsPerPage = 6;
    let currentVisible = itemsPerPage;

    const sectionSelector = document.getElementById('shopify-section-{{section.id}}');
    const items = sectionSelector.querySelectorAll('.block-item');
    const button = sectionSelector.querySelector('#show-more-button');
    const container = sectionSelector.querySelector('#show-more-container');

    button.addEventListener('click', function () {
      const totalItems = items.length;

      for (let i = currentVisible; i < currentVisible + itemsPerPage && i < totalItems; i++) {
        items[i].classList.remove('tw-hidden');
      }

      currentVisible += itemsPerPage;

      if (currentVisible >= totalItems) {
        container.style.display = 'none';
      }
    });

    if (items.length <= itemsPerPage) {
      container.style.display = 'none';
    }
  });
</script>


