      {% for block in section.blocks %}
      {% assign bk_stts = block.settings %}
      <div class="{% unless forloop.first %} md:tw-pt-12 tw-pt-6 {% endunless %} block-item {% if forloop.index > 6 %}tw-hidden{% endif %}" >
        <a class=" tw-flex tw-justify-between tw-items-center" href="{{ bk_stts.url }}">
          {{bk_stts.title}}
          <span class="tw-flex md:tw-gap-4 tw-text-vi tw-items-center">
