{% comment %} <script src="{{ 'card-slider-media.js' | asset_url }}" defer="defer"></script> {% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
  }
</style>

<div class="section press-wrapper section--padding tw-overflow-hidden{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="{% if section.settings.pw-overflow-hidden %}page-width-overflow-hidden{% else %}page-width{% endif %} {% if section.settings.full_width %} page-width--full{% endif %} relative">
    {%- render 'section-heading', section: section -%}

    <card-slider-media auto-play="true" class="product-card__carousel press-card__carousel tw-flex tw-flex-col tw-h-full" thumbnail-mode="click" slider-media-id="card-slider-{{ section.id }}" >
      {% for block in section.blocks %}
      {% assign bk_stts = block.settings %}
        <div class="media tw-w-full tw-bg-transparent"> 
          <div class="tw-text-center lg:tw-w-4/5 tw-mx-auto tw-mb-6">
            <p class="md:tw-text-4xl tw-text-xl tw-font-medium md:tw-min-h-32 md:tw-line-clamp-3 md:tw-leading-normal"> {{ bk_stts.content }} </p>
            {% comment %} {% if bk_stts.author != blank %}
              <p class="md:tw-text-2xl tw-text-viGray-500 tw-italic tw-mt-2"> {{ bk_stts.author }} </p>
            {% endif %} {% endcomment %}
          </div>
        </div>
      {% endfor %}
    </card-slider-media>



    <ul class=" tw-flex tw-gap-4 tw-overflow-x-auto tw-max-w-full md:tw-justify-center -md:tw-mt-4 -md:tw-justify-center" slider-thumbnail-id="card-slider-{{ section.id }}">
      {% for block in section.blocks %}
      {% assign bk_stts = block.settings %}
      <li class="thumbnail tw-grayscale tw-transition-all tw-min-w-[125px] tw-opacity-30 tw-cursor-pointer -md:tw-hidden ">
        {{ bk_stts.logo | image_url: width: '150' | image_tag: width: '150'}} 
      </li>
      {% endfor %}
    </ul>

  </div>
</div>

<style>
  #shopify-section-{{section.id}} .product-card__carousel .flickity-page-dot:first-child {
    display: flex;
  }
</style>

