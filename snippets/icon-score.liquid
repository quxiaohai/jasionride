{%- assign score = info.score | divided_by: 1.0 | round -%}
{%- if score < 1 -%}
    {%- assign score = 1 -%}
{%- elsif score > 5 -%}
    {%- assign score = 5 -%}
{%- endif -%}
<ul class="score-items flex-left">
    {% for val in (1..score) %}
        <li class="score-item flex-center">
            <svg
                    class="score-svg"
                    viewBox="0 0 1024 1024"
                    xmlns="http://www.w3.org/2000/svg"
                    width="15"
                    height="15">
                <path
                        d="M944.1 457.4c29.8-29.8 13.6-81.1-27.8-88.1l-219.6-37c-16.9-2.8-31.3-14-38.4-29.7l-94-208.3c-18-40-74-40.7-93.1-1.3l-99.4 205.3c-7.5 15.5-22.3 26.3-39.3 28.7l-220.3 30.5C70.7 363.3 53 414.2 82 444.8L241.9 614c11.3 12 16.3 28.6 13.4 44.9l-40.9 232.5c-7.5 42.6 37 75.2 74.9 54.9l193.8-104c15.6-8.4 34.3-8.1 49.6 0.7l190.9 109.5c37.4 21.4 82.7-10 76.4-52.8l-34.8-233.4c-2.4-16.4 3-32.9 14.6-44.6l164.3-164.3z"
                        fill="{% if info.score_color != blank %}{{ info.score_color }}{% else %}#FFC107{% endif %}"></path>
            </svg>
        </li>
    {% endfor %}
    {%- assign num = 5 | minus: score -%}
    {%- if num > 0 -%}
        {% for val in (1..num) %}
            <li class="score-item flex-center">
                <svg
                        viewBox="0 0 1024 1024"
                        xmlns="http://www.w3.org/2000/svg"
                        width="15"
                        height="15">
